{
  "name": "@project/root",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "clean": "monorepo clean workspace",
    "build": "monorepo build",
    "sync:packages": "monorepo sync packages",
    "test": "lerna run test --stream",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "build:client": "lerna run build --scope=@project/client --stream",
    "build:server": "lerna run build --scope=@project/server --stream",
    "start": "lerna run start --stream --parallel"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@tsed/ajv": "5.61.4",
    "@tsed/common": "5.61.4",
    "@tsed/core": "5.61.4",
    "@tsed/di": "5.61.4",
    "@tsed/exceptions": "5.61.4",
    "@tsed/platform-express": "5.61.4",
    "@tsed/swagger": "5.61.4",
    "@types/swagger-schema-official": "2.0.20",
    "ajv": "6.12.3",
    "body-parser": "1.19.0",
    "compression": "1.7.4",
    "concurrently": "5.2.0",
    "cookie-parser": "1.4.5",
    "cors": "2.8.5",
    "cross-env": "7.0.2",
    "express": "4.17.3",
    "method-override": "3.0.0",
    "lerna": "3.20.2",
    "pm2": "4.1.2"
  },
  "devDependencies": {
    "@tsed/monorepo-utils": "1.8.5",
    "@tsed/cli-plugin-eslint": "1.17.0",
    "@tsed/cli-plugin-jest": "1.17.0",
    "@types/compression": "1.7.0",
    "@types/cookie-parser": "1.4.2",
    "@types/cors": "2.8.6",
    "@types/express": "4.17.7",
    "@types/jest": "26.0.8",
    "@types/method-override": "0.0.31",
    "@types/node": "14.0.27",
    "@types/supertest": "2.0.10",
    "@typescript-eslint/eslint-plugin": "3.8.0",
    "@typescript-eslint/parser": "3.8.0",
    "concurrently": "5.2.0",
    "eslint": "7.6.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.2.5",
    "jest": "26.2.2",
    "lint-staged": "10.2.11",
    "nodemon": "2.0.4",
    "prettier": "2.0.5",
    "supertest": "4.0.2",
    "ts-jest": "26.1.4",
    "ts-node": "8.10.2",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.9.7"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "packages/server/src/**/*.{ts}": [
      "cd packages/server && yarn lint:fix",
      "git add"
    ],
    "packages/config/src/**/*.{ts}": [
      "cd packages/config && yarn lint:fix",
      "git add"
    ],
    "packages/app-1/src/**/*.{ts}": [
      "cd packages/app-1 && yarn lint:fix",
      "git add"
    ]
  },
  "monorepo": {
    "productionBranch": "master",
    "npmAccess": "private",
    "ignoreSyncDependencies": []
  }
}
